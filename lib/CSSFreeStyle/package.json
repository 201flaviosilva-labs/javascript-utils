{
  "name": "css-free-style",
  "version": "1.3.0",
  "description": "Just simple utils for css :)",
  "homepage": "https://201flaviosilva-labs.github.io/javascript-utils/",
  "author": "201flaviosilva",
  "license": "MIT",
  "files": [
    "build/",
    "src/",
    "package.json",
    "README.md",
    "CHANGELOG.md"
  ],
  "scripts": {
    "clear": "rm -rf build",
    "compile": "css-minify -d src/ -o build",
    "build": "npm run clear && npm run compile",
    "bump": "npm run build && npm version patch --force && npm publish",
    "bump:minor": "npm run build && npm version minor --force && npm publish",
    "bump:major": "npm run build && npm version major --force && npm publish"
  },
  "devDependencies": {
    "css-minify": "^2.0.0"
  },
  "keywords": [
    "utils",
    "css",
    "canvas"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/201flaviosilva-labs/javascript-utils.git"
  },
  "bugs": {
    "url": "https://github.com/201flaviosilva-labs/javascript-utils/issues"
  }
}
